list=[2,4,8,16]
num = list[1]/list[0]
count = 0
for i in range(0,len(list)-1):
    if(list[i]*num != list[i+1]):
        count=1
if(count==0):
    print("It is geometric progression")
else:
    print("It is not geometric progression")
